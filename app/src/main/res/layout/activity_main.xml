<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="15dp"
    android:padding="32dp"
    tools:context=".SplashScreenActivity">

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:text="@string/weight_kg"
        android:textColor="@color/card_background"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWeight"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"

        android:hint="@string/enter_your_weight"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_primary90"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Weight"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:text="@string/height_cm"
        android:textColor="@color/card_background"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeight"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg"
        android:hint="@string/enter_your_height"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textColorHint="@color/material_dynamic_primary90" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="212dp"
        android:layout_height="62dp"
        android:layout_below="@id/Height"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="109dp"
        android:backgroundTint="@color/teal_700"
        android:text="@string/calculate"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalculate"
        android:text="@string/result"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_tertiary70"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/result"
        android:layout_below="@id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/layout_background"
        />


</RelativeLayout>